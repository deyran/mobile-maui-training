<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OficinaApp.Pages.LoginUsuarioPage"
             Title="LoginUsuarioPage">

    <StackLayout    VerticalOptions="CenterAndExpand"
                    Margin="16"
                    Padding="16">

        <Label 
            Text="LOGIN"
            VerticalOptions="Center"
            HorizontalOptions="Center" />

        <Label Text="E-mail" x:Name="lblEmail" />
        <Entry Placeholder="Digite seu e-mail" x:Name="txtEmail" />

        <Label Text="Senha" x:Name="lblSenha" />
        <Entry Placeholder="Digite sua Senha" x:Name="txtSenha" />

        <Button 
            Text="Entrar"
            x:Name="btnEntrar"
            Margin="10" 
            Clicked="BtnEntrar_Clicked" />

        <Button 
            Text="Registrar-se"
            x:Name="btnRegistrar"
            Margin="10"
            Clicked="BtnRegistrar_Clicked" />

    </StackLayout>
    
</ContentPage>